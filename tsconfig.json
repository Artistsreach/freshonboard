{
  "extends": "./jsconfig.json", // Inherit settings from jsconfig.json
  "compilerOptions": {
    "jsx": "react-jsx", // Assuming you're using React
    "allowJs": true,    // Allow JavaScript files to be compiled
    "noEmit": true,     // Do not emit output files (since it's for type checking/editor support)
    "isolatedModules": true, // Ensures every file can be transpiled independently
    "strict": true,        // Enable all strict type-checking options
    "skipLibCheck": true,  // Skip type checking of declaration files
    "module": "esnext",    // Enable import.meta usage
    "moduleResolution": "bundler", // Better for Vite
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
